<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="io.qianmo.category.entity">
	<class name="Attribute" table="attributes">

		<id name="id" column="attribute_id">
			<generator class="identity" />
		</id>

		<property name="categoryId" unique-key="UK_CATEGORY_NAME">
			<column name="category_id" not-null="true" />
		</property>

		<property name="name" unique-key="UK_CATEGORY_NAME">
			<column name="name" not-null="true" />
		</property>
		
		<property name="isDeleted">
			<column name="is_deleted" not-null="true" sql-type="tinyint(1)" />
		</property>
	</class>
</hibernate-mapping>
