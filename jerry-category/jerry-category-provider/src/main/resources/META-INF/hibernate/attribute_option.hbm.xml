<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="io.qianmo.category.entity">
	<class name="AttributeOption" table="attribute_options">
		<id name="id" column="option_id">
			<generator class="identity" />
		</id>

		<many-to-one name="attribute" class="Attribute" lazy="false"
			unique-key="UK_SHOP_ATTRIBUTE_VALUE" foreign-key="FK_ATTRIBUTE">
			<column name="attribute_id" not-null="true" index="IDX_ATTRIBUTE" />
		</many-to-one>

		<property name="value" unique-key="UK_SHOP_ATTRIBUTE_VALUE">
			<column name="value" not-null="true" />
		</property>

		<property name="shopId" unique-key="UK_SHOP_ATTRIBUTE_VALUE">
			<column name="shop_id" not-null="true" index="IDX_SHOP"/>
		</property>

		<property name="isDeleted">
			<column name="is_deleted" not-null="true" sql-type="tinyint(1)" />
		</property>

	</class>
</hibernate-mapping>
